.header
  .main-header
    .main-header-top
      .main-header-logo
        = link_to root_path do
          = image_tag "/assets/fmarket_logo_red.svg"
      .mainheader-logo-search
        %input.mainheader-logo-search-box{placeholder: "何かお探しですか？", type: "text", value: ""}
        %button.mainheader-logo-search-button
          %i.fa.fa-search
    .main-header-bottom
      .main-header-bottom__left 
        .main-header-bottom-leftbox
          .main-header-bottom-leftbox-category-left
            .a-category
              %i.fa.fa-bars.headericon
              = link_to "/",class:"a-category" do
                カテゴリーから探す
          .main-header-bottom-leftbox-category-right
            .a-brand
              %i.fa.fa-tags.headericon
              = link_to "/",class:"a-brand" do
                ブランドから探す
      .main-header-bottom__right1
        .main-header-bottom__right1-signup
          = link_to '新規会員登録', 'http://google.co.jp', class: "a-signup"
        .main-header-bottom__right1-login
          = link_to 'ログイン', 'http://google.co.jp', class: "a-login"