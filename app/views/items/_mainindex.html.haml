.main-category
  %h2.main-category-top 人気のカテゴリー
  .main-category-bottom
    %ul.category-items
      %li.category-item-btn
        %a.category-item-name レディース
      %li.category-item-btn
        %a.category-item-name メンズ
      %li.category-item-btn
        %a.category-item-name 家電・スマホ・カメラ
      %li.category-item-btn
        %a.category-item-name おもちゃ・ホビー・グッズ
.main-items
  .main-items-show
    .main-items-show-header
      %h3.main-items-show-header-left 新着アイテム
      = link_to 'もっと見る >', '#', class: 'main-items-show-header-right'
    .main-items-show-bottom
      .main-items-bottom-list
        %ul.list-items
          - @items.each do |item|
            %li.list-item
              .list-item-all
                = link_to item_path(item.id), class:"main-items-all", method: :get do
                  %figure.main-items-all-figure
                    .img-main-item1
                      -# = image_tag item.images[0].image,class: "img-main-item"
                      %span.aria-label
                        = "¥#{item.price}"
                    %figcaption.main-items-all-figure-i
                      %span.main-items-all-span
                        = item.name