%section.itembuy-content
  %h1.itembuy-content__name
    = @item.name
  .itembuy-content__clearfix
    .itembuy-content__photo
      = render "item_carusel"
    %table.itembuy-content__table
      %tbody
        %tr
          -# %th.thcategory 出品者
          -# %td.tdcategory
          -#   = link_to root_path , class:'tdcategory-name' do
          -#     = @user.nickname
            %div
              .itembuy-user-evaluation-smile
                %i.fa.fa-smile-o
                %span.evaluation-icon 999
              .itembuy-user-evaluation
                %i.fa.fa-meh-o
                %span.evaluation-icon 999
              .itembuy-user-evaluation
                %i.fa.fa-frown-o
                %span.evaluation-icon 999
        %tr
          %th.thcategory 氏名
          %td.tdcategory
            = @item.status
        %tr
          %th.thcategory  住所
          %td.tdcategory
            = link_to root_path,class: "link_color" do
              = @brand.name
        %tr
          %th.thcategory 電話番号
          %td.tdcategory
            =@item.burden
        %tr
          %th.thcategory メールアドレス
          %td.tdcategory
            = @item.date
        %tr
          %th.thcategory 連絡方法
          %td.tdcategory
            = @item.send_method
        -# %tr
        -#   %th.thcategory 
        -#   %td.tdcategory
        -#     = link_to root_path ,class: "link_color"do
        -#       = @item.region
        %tr
          %th.thcategory 査定品カテゴリー
          %td.tdcategory
            = link_to  root_path ,class: "link_color"do
              = @item.category
  .itembuy-content__price
    %span.itembuy-content__bold
      希望額：¥
      = @item.price
    -# - if @item.buyer_id.present? 
    -#   .itembuy-price-box-sold
    -#     売り切れました
    -# - else
      .itembuy-price-box
        = link_to buyscreen_buy_path ,class: 'itembuy-price-box' do
          購入画面に進む
  .itembuy-detail
    %p.itembuy-detail__coments
      = @item.description
  .item__buck
    =link_to "/", class: "buck__btn" do
      一覧に戻る

