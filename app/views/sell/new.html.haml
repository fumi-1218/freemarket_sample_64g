.sell
  .sel__header
    = render "shared/user_header"
  .sell__body
    = form_with(model: @item,url: sell_index_path, method: :post, local: true) do |f|
      .sell__file
        .sell-form-group
          .sell__label
            %h3.sell__block__form__upload__head
              査定品画像
              %span.require 必須
            %p 最大10枚までアップロードできます
            #image-box-1
              .item-num-0#image-box__container
                = f.fields_for :images do |image|
                  .input-area
                    = image.file_field :image,class: "sell-drop__box__file", type: 'file', id:"img-file", name: "images[image][]"
                    %label{for: "img-file"}
                    %i.fa.fa-camera.sell-drop__camera
                    %br/
                    ドラッグアンドドロップ
                    %br/
                    またはクリックしてください
      .sell__file
        .sell-form-group
          .sell__label
            査定品名
            %span.require 必須
          = f.text_field :name, class: 'select_default',placeholder: "商品名（必須 40文字まで)"
          .sell-form-group
            .sell__label
              カテゴリー
              %span.require 必須
            = f.select :category, {家電: "家電", 家具: "家具", 楽器: "楽器", 車・バイク・自転車: "車・バイク・自転車", オーディオ: "オーディオ", お酒: "お酒", 携帯・スマートフォン: "携帯・スマートフォン", パソコン・周辺機器: "パソコン・周辺機器", カメラ・双眼鏡: "カメラ・双眼鏡", ゴルフ用品・釣具: "ゴルフ用品・釣具", ゲーム・CD・DVD: "ゲーム・CD・DVD", ブランド品・時計: "ブランド品・時計", 貴金属・アクセサリー: "貴金属・アクセサリー", 電動工具: "電動工具", 不用品回収・遺品整理: "不用品回収・遺品整理", インフラ整備: "インフラ整備"}
          .sell-form-group
            .sell__label
              査定品の説明
              %span.require 必須
            = f.text_area :description, placeholder: "査定品の説明（必須 1,000文字以内）傷の有無、使用年数等の物品説明", rows: "5"
      .sell__file
        .sell__head
          お客様情報
          .sell-form-group
            .sell__label
              氏名
              %span.require 必須
            = f.text_field :status, class: 'select_default'
          .sell-form-group
            .sell__label
              住所
              %span.require 必須
            = f.fields_for :brands do |b|
              = b.text_field :name, class: 'select_default'
          .sell-form-group
            .sell__label
              電話番号
              %span.require 必須
            = f.text_field :burden, class: 'select_default'
        .sell-form-group
          .sell__label
            メールアドレス
            %span.require 必須
            = f.text_field :date, class: 'select_default'

        .sell-form-group
          .sell__label
            連絡方法
            %span.require 必須
          = f.select :send_method, 電話: "電話", メール: "メール"
        -# .sell-form-group
        -#   .sell__label
        -#     発送元の地域
        -#     %span.require 必須
        -#   = f.select :region,北海道: "北海道",青森県: "青森県",岩手県: "岩手県",宮城県: "宮城県",秋田県: "秋田県",山形県: "山形県",福島県: "福島県",茨城県: "茨城県",栃木県: "栃木県",群馬県: "群馬県",埼玉県: "埼玉県",千葉県: "千葉県",東京都: "東京都",神奈川県: "神奈川県",新潟県: "新潟県",富山県: "富山県",石川県: "石川県",福井県: "福井県",山梨県: "山梨県",長野県: "長野県",岐阜県: "岐阜県",静岡県: "静岡県",愛知県: "愛知県",三重県: "三重県",滋賀県: "滋賀県",京都府: "京都府",大阪府: "大阪府",兵庫県: "兵庫県",奈良県: "奈良県",和歌山県: "和歌山県",鳥取県: "鳥取県",島根県: "島根県",岡山県: "岡山県",広島県: "広島県",山口県: "山口県",徳島県: "徳島県",香川県: "香川県",愛媛県: "愛媛県",高知県: "高知県",福岡県: "福岡県",佐賀県: "佐賀県",長崎県: "長崎県",熊本県: "熊本県",大分県: "大分県",宮崎県: "宮崎県",鹿児島県: "鹿児島県",沖縄県: "沖縄県"
      .sell__file
        .sell__head
          -# 販売価格(300〜9,999,999)
          .sell-form-group
            %ul.sell-price
              %li.form-group
                .sell__price
                  .sell__label
                    希望査定額
                    %span.require 必須
                  .sell-right.sell-price-input
                    .sell-yen
                      ¥
                    %div
                      = f.text_area :price, class: "input-price", placeholder: "例）300", value: ""
            .sell__exhibit
              = f.submit :査定依頼を出す, class: "sell-btn__red"
            .sell__back
              =link_to "https://ecopartners.co.jp/", class: "sell-btn__grey" do
                戻る
  .sell__footer
    = render "shared/user_footer"

